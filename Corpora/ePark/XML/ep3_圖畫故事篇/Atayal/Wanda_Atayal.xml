<TEXT id="eP3_圖畫故事篇_Wanda_Atayal" xml:lang="tay" source="ePark3 圖畫故事篇 Wanda_Atayal" audio="diarized" copyright="CC-BY-NC-SA" citation="Indigenous Languages Research and Development Foundation. (2020). 族語E樂園. https://web.klokah.tw/" BibTeX_citation="@misc{ePark, author = {Indigenous Languages Research and Development Foundation}, title = {族語E樂園}, year = {2020}, url = {https://web.klokah.tw/} }">
    <S id="230514">
        <FORM>wagi'! wagi'! wagi'!</FORM>
        <TRANSL xml:lang="zh">太陽!太陽!太陽!</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230514.mp3" url="https://web.klokah.tw/text/sound//17705/230514.mp3"/>
    </S>
    <S id="230515">
        <FORM>buu na Itaral ka utux wagi'.</FORM>
        <TRANSL xml:lang="zh">泰雅人射下一個太陽，</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230515.mp3" url="https://web.klokah.tw/text/sound//17705/230515.mp3"/>
    </S>
    <S id="230516">
        <FORM>sa'aring ci kaca' la ga.</FORM>
        <TRANSL xml:lang="zh">從此以後，</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230516.mp3" url="https://web.klokah.tw/text/sound//17705/230516.mp3"/>
    </S>
    <S id="230517">
        <FORM>kelan na malahngan la.</FORM>
        <TRANSL xml:lang="zh">有了晚上。</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230517.mp3" url="https://web.klokah.tw/text/sound//17705/230517.mp3"/>
    </S>
    <S id="230518">
        <FORM>amol ka hani'?</FORM>
        <TRANSL xml:lang="zh">這是什麼?</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230518.mp3" url="https://web.klokah.tw/text/sound//17706/230518.mp3"/>
    </S>
    <S id="230519">
        <FORM>lukus ka hani'.</FORM>
        <TRANSL xml:lang="zh">這是衣服。</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230519.mp3" url="https://web.klokah.tw/text/sound//17706/230519.mp3"/>
    </S>
    <S id="230520">
        <FORM>amol ka hani'?</FORM>
        <TRANSL xml:lang="zh">這是什麼?</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230520.mp3" url="https://web.klokah.tw/text/sound//17706/230520.mp3"/>
    </S>
    <S id="230522">
        <FORM>amol ka hani'?</FORM>
        <TRANSL xml:lang="zh">這是什麼?</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230522.mp3" url="https://web.klokah.tw/text/sound//17706/230522.mp3"/>
    </S>
    <S id="230525">
        <FORM>payux la kahuni' lu kankaman.</FORM>
        <TRANSL xml:lang="zh">很多樹木和草，</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230525.mp3" url="https://web.klokah.tw/text/sound//17707/230525.mp3"/>
    </S>
    <S id="230526">
        <FORM>Sasi ka ralu' ni alang mu.</FORM>
        <TRANSL xml:lang="zh">我的名字叫親愛。</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230526.mp3" url="https://web.klokah.tw/text/sound//17707/230526.mp3"/>
    </S>
    <S id="230521">
        <FORM>ara' ka hani'.</FORM>
        <TRANSL xml:lang="zh">這是褲子。</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230521.mp3" url="https://web.klokah.tw/text/sound//17706/230521.mp3"/>
    </S>
    <S id="230527">
        <FORM>ka babawi' tikiy! ka babawi' tikiy!</FORM>
        <TRANSL xml:lang="zh">高一點再高一點，</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230527.mp3" url="https://web.klokah.tw/text/sound//17708/230527.mp3"/>
    </S>
    <S id="230523">
        <FORM>sapit laha ci tamuku' ka hani'.</FORM>
        <TRANSL xml:lang="zh">這是鞋子和帽子。</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230523.mp3" url="https://web.klokah.tw/text/sound//17706/230523.mp3"/>
    </S>
    <S id="230524">
        <FORM>babawi' lu magaragu' ka ragex.</FORM>
        <TRANSL xml:lang="zh">高聳而蒼翠的山脈，</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230524.mp3" url="https://web.klokah.tw/text/sound//17707/230524.mp3"/>
    </S>
    <S id="230528">
        <FORM>tapanga' ci hangali' ni yaba'.</FORM>
        <TRANSL xml:lang="zh">騎在爸爸的肩膀上。</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230528.mp3" url="https://web.klokah.tw/text/sound//17708/230528.mp3"/>
    </S>
    <S id="230530">
        <FORM>mananangi' cu marapax ma'uxil.</FORM>
        <TRANSL xml:lang="zh">我趴在地上假裝死掉。</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230530.mp3" url="https://web.klokah.tw/text/sound//17708/230530.mp3"/>
    </S>
    <S id="230532">
        <FORM>pakaṟek ci ka uṟati' mararusa' malikuṟ lu utux ka kanel.</FORM>
        <TRANSL xml:lang="zh">兩個男人和一個女人從石頭蹦出來，</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230532.mp3" url="https://web.klokah.tw/text/sound//17709/230532.mp3"/>
    </S>
    <S id="230533">
        <FORM>taspa' ci ka muṟi' naka kanel ka ṟanglit.</FORM>
        <TRANSL xml:lang="zh">蒼蠅停留在女人大腿內側。</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230533.mp3" url="https://web.klokah.tw/text/sound//17709/230533.mp3"/>
    </S>
    <S id="230534">
        <FORM>sa'aring ki' la ga,</FORM>
        <TRANSL xml:lang="zh">此後，</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230534.mp3" url="https://web.klokah.tw/text/sound//17709/230534.mp3"/>
    </S>
    <S id="230535">
        <FORM>waṟal ta' muhuṟow ka Itaṟal la.</FORM>
        <TRANSL xml:lang="zh">泰雅族就繁衍了後代。</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230535.mp3" url="https://web.klokah.tw/text/sound//17709/230535.mp3"/>
    </S>
    <S id="230545">
        <FORM>buṟating! buṟating!</FORM>
        <TRANSL xml:lang="zh">月亮!月亮!</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230545.mp3" url="https://web.klokah.tw/text/sound//17711/230545.mp3"/>
    </S>
    <S id="230546">
        <FORM>maṟumul ka buṟating la. marumul cubay!</FORM>
        <TRANSL xml:lang="zh">月圓了，好圓好圓!</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230546.mp3" url="https://web.klokah.tw/text/sound//17711/230546.mp3"/>
    </S>
    <S id="230529">
        <FORM>masaṟugu' cu sipanga' ci ni yaba' mu.</FORM>
        <TRANSL xml:lang="zh">從爸爸的背上滑下來。</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230529.mp3" url="https://web.klokah.tw/text/sound//17708/230529.mp3"/>
    </S>
    <S id="230531">
        <FORM>pulaka'! pulaka'!</FORM>
        <TRANSL xml:lang="zh">飛啊!飛啊!</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230531.mp3" url="https://web.klokah.tw/text/sound//17708/230531.mp3"/>
    </S>
    <S id="230547">
        <FORM>maṟumul ka buṟating cubay.</FORM>
        <TRANSL xml:lang="zh">好圓好圓的月亮!</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230547.mp3" url="https://web.klokah.tw/text/sound//17711/230547.mp3"/>
    </S>
    <S id="230549">
        <FORM>taxi'! lun'uli' kinang ka buṟating hani'.</FORM>
        <TRANSL xml:lang="zh">看，月亮一直跟著我!</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230549.mp3" url="https://web.klokah.tw/text/sound//17711/230549.mp3"/>
    </S>
    <S id="230551">
        <FORM>hungu' na amutux! hungu' na amutux!</FORM>
        <TRANSL xml:lang="zh">神靈之橋!神靈之橋!</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230551.mp3" url="https://web.klokah.tw/text/sound//17712/230551.mp3"/>
    </S>
    <S id="230550">
        <FORM>buṟating, unpabel cu la, pasugagiy ta'la.</FORM>
        <TRANSL xml:lang="zh">月亮，我要睡覺了。晚安!</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230550.mp3" url="https://web.klokah.tw/text/sound//17711/230550.mp3"/>
    </S>
    <S id="230548">
        <FORM>yaba' ka buṟating cubay.</FORM>
        <TRANSL xml:lang="zh">月亮好大唷!</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230548.mp3" url="https://web.klokah.tw/text/sound//17711/230548.mp3"/>
    </S>
    <S id="230552">
        <FORM>pacapung ci linglungan na Itaral ka hungu' na amutux.</FORM>
        <TRANSL xml:lang="zh">由神靈橋裁定泰雅人的良善。</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230552.mp3" url="https://web.klokah.tw/text/sound//17712/230552.mp3"/>
    </S>
    <S id="230553">
        <FORM>ini ta' mamahmut ga,</FORM>
        <TRANSL xml:lang="zh">不要胡作非為，</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230553.mp3" url="https://web.klokah.tw/text/sound//17712/230553.mp3"/>
    </S>
    <S id="230554">
        <FORM>pahaṟinas ta' cika' hungu' na amutux.</FORM>
        <TRANSL xml:lang="zh">就可以通過神靈之橋。</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230554.mp3" url="https://web.klokah.tw/text/sound//17712/230554.mp3"/>
    </S>
    <S id="230566">
        <FORM>sunkisli'maki' ci ka minakung na baling ka olit xiya'.</FORM>
        <TRANSL xml:lang="zh">喜歡住在黑洞裡，</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230566.mp3" url="https://web.klokah.tw/text/sound//17713/230566.mp3"/>
    </S>
    <S id="230567">
        <FORM>malahngan ga matata'tanux moh unkuri' mani' ci nan'iun,</FORM>
        <TRANSL xml:lang="zh">晚上出來偷吃食物，</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230567.mp3" url="https://web.klokah.tw/text/sound//17713/230567.mp3"/>
    </S>
    <S id="230569">
        <FORM>suntatunux caṟung ini bah papabel caminan.</FORM>
        <TRANSL xml:lang="zh">吵得我們睡不著覺。</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230569.mp3" url="https://web.klokah.tw/text/sound//17713/230569.mp3"/>
    </S>
    <S id="230568">
        <FORM>ci! ci! ci! ci! ma' mingaṟu'.</FORM>
        <TRANSL xml:lang="zh">吱吱吱吱的叫，</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230568.mp3" url="https://web.klokah.tw/text/sound//17713/230568.mp3"/>
    </S>
    <S id="230570">
        <FORM>ba' mulata' ka sun malikuṟ na Itaṟal,</FORM>
        <TRANSL xml:lang="zh">泰雅男人會打獵，</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230570.mp3" url="https://web.klokah.tw/text/sound//17714/230570.mp3"/>
    </S>
    <S id="230574">
        <FORM>kelan na turakis cel kagiri',</FORM>
        <TRANSL xml:lang="zh">背簍裡有小米，</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230574.mp3" url="https://web.klokah.tw/text/sound//17715/230574.mp3"/>
    </S>
    <S id="230575">
        <FORM>kelan na singut cel kagiri',</FORM>
        <TRANSL xml:lang="zh">背簍裡有樹豆，</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230575.mp3" url="https://web.klokah.tw/text/sound//17715/230575.mp3"/>
    </S>
    <S id="230576">
        <FORM>ramas ni'un ka turakis lu singut.</FORM>
        <TRANSL xml:lang="zh">小米樹豆好好吃。</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230576.mp3" url="https://web.klokah.tw/text/sound//17715/230576.mp3"/>
    </S>
    <S id="230572">
        <FORM>kani ga patasan ka raṟes naha la.</FORM>
        <TRANSL xml:lang="zh">就可以紋面了。</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230572.mp3" url="https://web.klokah.tw/text/sound//17714/230572.mp3"/>
    </S>
    <S id="230573">
        <FORM>mapanga' ci kagiri' ka yaki',</FORM>
        <TRANSL xml:lang="zh">祖母背著背簍，</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230573.mp3" url="https://web.klokah.tw/text/sound//17715/230573.mp3"/>
    </S>
    <S id="230571">
        <FORM>ba' tuminu' ka sun kanel na Itaṟal,</FORM>
        <TRANSL xml:lang="zh">泰雅女人會織布，</TRANSL>
        <AUDIO file="圖畫故事篇_Wanda_Atayal_230571.mp3" url="https://web.klokah.tw/text/sound//17714/230571.mp3"/>
    </S>
</TEXT>
