<TEXT id="Siraya_Matthew84" xml:lang="fos" source="Siraya Bible, Matthew gospel" copyright="public domain" citation="" BibTeX_citation="">
  <S id="S1">
    <FORM>pillalamæh-in ki apoei, kma-al-ap-</FORM>
  </S>
  <S id="S2">
    <FORM>pa-hynna tou kæuh-kahan kæuh-</FORM>
  </S>
  <S id="S3">
    <FORM>limoulimou ki yddarynnoug-an.</FORM>
  </S>
  <S id="S4">
    <FORM>41 Ka madingi-ah ta Alak ki</FORM>
  </S>
  <S id="S5">
    <FORM>ka-'æuloung ki Tama-gnau tyn,</FORM>
  </S>
  <S id="S6">
    <FORM>ka papalillud-ah tou Pei-sasou-an</FORM>
  </S>
  <S id="S7">
    <FORM>tyn ymmid ki paka-varau-en</FORM>
  </S>
  <S id="S8">
    <FORM>kmæu-eirau, ki pamut-appa ki</FORM>
  </S>
  <S id="S9">
    <FORM>katoukoul-an:</FORM>
  </S>
  <S id="S10">
    <FORM>42 Ka'aring-an-ei nein smaki-</FORM>
  </S>
  <S id="S11">
    <FORM>qua neini-æn tou tatoulou-an ki</FORM>
  </S>
  <S id="S12">
    <FORM>apoei: tou hynna-al-ato ta tangi-</FORM>
  </S>
  <S id="S13">
    <FORM>tangi-en ki patit-ing-en appa ki</FORM>
  </S>
  <S id="S14">
    <FORM>waligh.</FORM>
  </S>
  <S id="S15">
    <FORM>43 Tou kidi k'anna matika-</FORM>
  </S>
  <S id="S16">
    <FORM>nag-ah ta matiktik mama ki wæ'ï</FORM>
  </S>
  <S id="S17">
    <FORM>tou Pei-sasou-an ki Rama nein.</FORM>
  </S>
  <S id="S18">
    <FORM>Timaman ta akou-tangira tou il-</FORM>
  </S>
  <S id="S19">
    <FORM>ling-han, illing-hau-ra.</FORM>
  </S>
  <S id="S20">
    <FORM>44 Mila, mama ki kavangei-an</FORM>
  </S>
  <S id="S21">
    <FORM>ka ni-hâ tou ouma ta Pei-sasau-an</FORM>
  </S>
  <S id="S22">
    <FORM>ki tounnoun ki vullu-vullum, ka</FORM>
  </S>
  <S id="S23">
    <FORM>rou paki-valei-en ki ta-'u, ha-in</FORM>
  </S>
  <S id="S24">
    <FORM>tyn ta anna, ka alei ki karaj-en</FORM>
  </S>
  <S id="S25">
    <FORM>ki rÿh oukoun tyn pasa-dimma ki</FORM>
  </S>
  <S id="S26">
    <FORM>mamang tyn, ka peila ki ouma</FORM>
  </S>
  <S id="S27">
    <FORM>k'anna.</FORM>
  </S>
  <S id="S29">
    <FORM>45 Mila, mama ta Pei-sasou-an</FORM>
  </S>
  <S id="S30">
    <FORM>ki tounnoun ki vullu-vullum ki</FORM>
  </S>
  <S id="S31">
    <FORM>Tama-peila, ka kmiym ki vahto ka</FORM>
  </S>
  <S id="S32">
    <FORM>mæænnigh ka tæ'i-qua tou koudo:</FORM>
  </S>
  <S id="S33">
    <FORM>46 Ka rou ni-paki-valei tyn ta</FORM>
  </S>
  <S id="S34">
    <FORM>saäsat ki vahto ka mangal, ou-</FORM>
  </S>
  <S id="S35">
    <FORM>koun tyn pa-ymmid pa-sa-dimma</FORM>
  </S>
</TEXT>