<TEXT id="Siraya_Matthew152" xml:lang="fos" source="Siraya Bible, Matthew gospel" copyright="public domain" citation="" BibTeX_citation="">
  <S id="S1">
    <FORM>mauä-, ynna tyn assi pæ-kari-an-</FORM>
  </S>
  <S id="S2">
    <FORM>ei ta tallagh tyn,</FORM>
  </S>
  <S id="S4">
    <FORM>44 Alei ki atta, nda t'ma-do-</FORM>
  </S>
  <S id="S5">
    <FORM>appa tmanang ta ymoumi, alei ka</FORM>
  </S>
  <S id="S6">
    <FORM>tou kidi ki tælei ka assi-mou-mi</FORM>
  </S>
  <S id="S7">
    <FORM>habauat-in, irou-ah ta Alak ki ka-</FORM>
  </S>
  <S id="S8">
    <FORM>euloung.</FORM>
  </S>
  <S id="S9">
    <FORM>45 Annata timang ta kouncia</FORM>
  </S>
  <S id="S10">
    <FORM>ka mashut ka mat-allah-kau, ka</FORM>
  </S>
  <S id="S11">
    <FORM>ni-pæsibavau-en ki Meirang tyn ki</FORM>
  </S>
  <S id="S12">
    <FORM>sat katallag-han tyn, alei ki phæ</FORM>
  </S>
  <S id="S13">
    <FORM>anei neini-æn ki kan-næuh tou kidi</FORM>
  </S>
  <S id="S14">
    <FORM>ka mariang.</FORM>
  </S>
  <S id="S16">
    <FORM>46 Tama-tæi-riang ta koun-</FORM>
  </S>
  <S id="S17">
    <FORM>cia kanna, ka ka-bælei-auh ki</FORM>
  </S>
  <S id="S18">
    <FORM>Meirang tyn, dou iroua, ta mei-</FORM>
  </S>
  <S id="S19">
    <FORM>k'ma hynna.</FORM>
  </S>
  <S id="S20">
    <FORM>47 Missing koun-nan-kamou</FORM>
  </S>
  <S id="S21">
    <FORM>ka pa-sibavau-ah tyni-æn ki ym-</FORM>
  </S>
  <S id="S22">
    <FORM>mid ki hourup tyn.</FORM>
  </S>
  <S id="S23">
    <FORM>48 Heirou-râ mattæ i-rmir-ah</FORM>
  </S>
  <S id="S24">
    <FORM>tou tintin tyn ta kouncia ka masa</FORM>
  </S>
  <S id="S25">
    <FORM>muk, Malanga iroua ta Meirang</FORM>
  </S>
  <S id="S26">
    <FORM>au:</FORM>
  </S>
  <S id="S27">
    <FORM>49 Ka dou makka-naunamou</FORM>
  </S>
  <S id="S28">
    <FORM>bukbuk ki kouncia ka talalam</FORM>
  </S>
  <S id="S29">
    <FORM>tyn, ka mi-sal-ah mavok, mou</FORM>
  </S>
  <S id="S30">
    <FORM>sal-ah myt ki Tama-yt.</FORM>
  </S>
  <S id="S31">
    <FORM>50 Anna ta jerrou-ah ta</FORM>
  </S>
  <S id="S32">
    <FORM>Meirang ka tamia ki kouncia</FORM>
  </S>
  <S id="S33">
    <FORM>k'anna tou wai ki assi tyn amamat-</FORM>
  </S>
  <S id="S34">
    <FORM>in, tou kidi-appa ki tælei ka assi</FORM>
  </S>
  <S id="S35">
    <FORM>tyn oumhgan.</FORM>
  </S>
</TEXT>