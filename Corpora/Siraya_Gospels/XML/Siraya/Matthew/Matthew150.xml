<TEXT id="Siraya_Matthew150" xml:lang="fos" source="Siraya Bible, Matthew gospel" copyright="public domain" citation="" BibTeX_citation="">
  <S id="S1">
    <FORM>dei-ati ki kavouyvouyllan ki Næt,</FORM>
  </S>
  <S id="S2">
    <FORM>ka kmyttæ-æh ki Alak ki ka'æu</FORM>
  </S>
  <S id="S3">
    <FORM>loung, dou ierroua tou pourararei</FORM>
  </S>
  <S id="S4">
    <FORM>ki vullum tou kailhgen ki kei</FORM>
  </S>
  <S id="S5">
    <FORM>rang-en ki kidi ka malouas.</FORM>
  </S>
  <S id="S6">
    <FORM>31 Ka padingi-eih tyn ta Ta-</FORM>
  </S>
  <S id="S7">
    <FORM>ma-Gnæu tyn ki joep ki oeni-appa</FORM>
  </S>
  <S id="S8">
    <FORM>ka irang, ka papakoi lalau-ah ki</FORM>
  </S>
  <S id="S9">
    <FORM>ni-peri tyn, ki pagpæt ki ni-pak</FORM>
  </S>
  <S id="S10">
    <FORM>ka-koua-an ki vare-vare, na soe-</FORM>
  </S>
  <S id="S11">
    <FORM>tounnoun ki vullu-vullum tou</FORM>
  </S>
  <S id="S12">
    <FORM>kidi-appa ki limoulimou ki anna.</FORM>
  </S>
  <S id="S13">
    <FORM>32. Ka madam- mou-mhga</FORM>
  </S>
  <S id="S14">
    <FORM>ki perænnæh ka lakæuoung-in ki</FORM>
  </S>
  <S id="S15">
    <FORM>pa myh kaulaul'an: Irou ka ma</FORM>
  </S>
  <S id="S16">
    <FORM>aukna ta pehil tyn, ka mou-sou</FORM>
  </S>
  <S id="S17">
    <FORM>rah ta hapa tyn, kalang'noumi ka</FORM>
  </S>
  <S id="S18">
    <FORM>a'ia hylli ta da'eulang.</FORM>
  </S>
  <S id="S19">
    <FORM>33 Komm'appa-hynna ta y-</FORM>
  </S>
  <S id="S20">
    <FORM>moumi, jrou kytt'ei-moumi ta</FORM>
  </S>
  <S id="S21">
    <FORM>mamang katta, k'alangæu-moumi</FORM>
  </S>
  <S id="S22">
    <FORM>kaä'ia touk æia-ngatas ta anna.</FORM>
  </S>
  <S id="S23">
    <FORM>34 Missing koun-nau-kamou,</FORM>
  </S>
  <S id="S24">
    <FORM>assi maliæuragh-ah ta kavouyl-lan</FORM>
  </S>
  <S id="S25">
    <FORM>katta, ka pahkahan-ato pamut</FORM>
  </S>
  <S id="S26">
    <FORM>ymdei-au kamamang k'anna.</FORM>
  </S>
  <S id="S28">
    <FORM>35 Maliæuragh-ah ta vulluma</FORM>
  </S>
  <S id="S29">
    <FORM>ki Nai, ra assimaliæuragh-ah ta</FORM>
  </S>
  <S id="S30">
    <FORM>kasou-en-au.</FORM>
  </S>
  <S id="S32">
    <FORM>36 Râ kidi ki wæ'i ki tæ'lei-</FORM>
  </S>
  <S id="S33">
    <FORM>appa k'anna assi mou-mbga ta ti-</FORM>
  </S>
  <S id="S34">
    <FORM>mamang, assi-appa ta Tama-Gnau</FORM>
  </S>
</TEXT>