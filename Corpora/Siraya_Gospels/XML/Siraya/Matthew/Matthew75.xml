<TEXT id="Siraya_Matthew75" xml:lang="fos" source="Siraya Bible, Matthew gospel" copyright="public domain" citation="" BibTeX_citation="">
  <S id="S1">
    <FORM>38 Anna ta ni-mattæi-vli ta</FORM>
  </S>
  <S id="S2">
    <FORM>rarouma ki Mako-sasoulat ki Fari-</FORM>
  </S>
  <S id="S3">
    <FORM>zéen-appa ka ni-k'ma, Mahtatæu-</FORM>
  </S>
  <S id="S4">
    <FORM>tæuh kamoei-'nian kmytta ka pa-</FORM>
  </S>
  <S id="S5">
    <FORM>amt-ei-'m-hou ta pou-kidi-en.</FORM>
  </S>
  <S id="S6">
    <FORM>39 Râ teni ta mattæi-vli ni-</FORM>
  </S>
  <S id="S7">
    <FORM>k'ma neini-æn, Kavouyl-an ka</FORM>
  </S>
  <S id="S8">
    <FORM>matt'-e ka rarbourbo tmoumimia</FORM>
  </S>
  <S id="S9">
    <FORM>ki pou-kidi-en, ka assi phæ-an-eil-</FORM>
  </S>
  <S id="S10">
    <FORM>ato neini-æn, dyk ki na pou-kaki-</FORM>
  </S>
  <S id="S11">
    <FORM>di ki na Tama-mattæi-tan ka ti</FORM>
  </S>
  <S id="S12">
    <FORM>Jonas.</FORM>
  </S>
  <S id="S13">
    <FORM>40 Ka mama ka ni-makka-</FORM>
  </S>
  <S id="S14">
    <FORM>touro ki wæ'i, makka-touro-appa</FORM>
  </S>
  <S id="S15">
    <FORM>ki æuvan ta ti Jonas tou vouyl ki</FORM>
  </S>
  <S id="S16">
    <FORM>mæuæu, makka-touro-ah k'ma-</FORM>
  </S>
  <S id="S17">
    <FORM>hynna ki wæ'i ki æuvan ta Alak ki</FORM>
  </S>
  <S id="S18">
    <FORM>kaæuloung tou tintin [ka raroun]</FORM>
  </S>
  <S id="S19">
    <FORM>ki Næi-râ.</FORM>
  </S>
  <S id="S20">
    <FORM>41 Æhpit-ah ta pæpæræh ka</FORM>
  </S>
  <S id="S21">
    <FORM>makka Ninive tou papæmæmæh-</FORM>
  </S>
  <S id="S22">
    <FORM>en lam ki kavavouyl-an k'atta,</FORM>
  </S>
  <S id="S23">
    <FORM>dmung-dung neini-æn: ka ni-si-</FORM>
  </S>
  <S id="S24">
    <FORM>lala nipa-sa-likough ki vana nein</FORM>
  </S>
  <S id="S25">
    <FORM>ki rÿh tou ni-patta-sasou-an ti Jo-</FORM>
  </S>
  <S id="S26">
    <FORM>nas. Ka kytt'ei masaoun tou vavau</FORM>
  </S>
  <S id="S27">
    <FORM>ki kidi ti Jonas-an, attaoun hia.</FORM>
  </S>
  <S id="S28">
    <FORM>42 Æhpit-ah ta Si-bavau ka</FORM>
  </S>
  <S id="S29">
    <FORM>Mei-sasou ka jna ka makka-ti-</FORM>
  </S>
  <S id="S30">
    <FORM>mæuh tou papæmæmæh-in lam ki</FORM>
  </S>
  <S id="S31">
    <FORM>kavouyl-an k'atta, dmung-dung</FORM>
  </S>
  <S id="S32">
    <FORM>neini-æn: alei ka ni-iroua makka</FORM>
  </S>
  <S id="S33">
    <FORM>kidi ki Næi millingigh ki na kaka-</FORM>
  </S>
  <S id="S34">
    <FORM>koussa-cyng ti Salomon. Ka k'yt-</FORM>
  </S>
  <S id="S35">
    <FORM>t'ei, masaoun tou vavau ki kidi ti</FORM>
  </S>
</TEXT>