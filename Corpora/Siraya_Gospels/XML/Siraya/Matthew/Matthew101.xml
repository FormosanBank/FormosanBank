<TEXT id="Siraya_Matthew101" xml:lang="fos" source="Siraya Bible, Matthew gospel" copyright="public domain" citation="" BibTeX_citation="">
  <S id="S1">
    <FORM>20 Tou kidi k'anna ni-ma-</FORM>
  </S>
  <S id="S2">
    <FORM>vagh ki Pahtatautau-han tyn,</FORM>
  </S>
  <S id="S3">
    <FORM>kassi banavana-ah ty mamang-an</FORM>
  </S>
  <S id="S4">
    <FORM>ka ti Jesus ta teni ka ti ahristus.</FORM>
  </S>
  <S id="S5">
    <FORM>21 Tou kidi-appa k'anna ni-</FORM>
  </S>
  <S id="S6">
    <FORM>mæi-næunamou ta ti Jesus vanna-</FORM>
  </S>
  <S id="S7">
    <FORM>vanna ki Pahtatæutæu-han tyn,ka</FORM>
  </S>
  <S id="S8">
    <FORM>kidi-ato ki darang-eih tyn mou-</FORM>
  </S>
  <S id="S9">
    <FORM>koua tou Jerusalem, ka tub'-hah</FORM>
  </S>
  <S id="S10">
    <FORM>ki madagh neini-æn ka Mamou-</FORM>
  </S>
  <S id="S11">
    <FORM>mou [ki tau,]ka Si-bavau ka Ta-</FORM>
  </S>
  <S id="S12">
    <FORM>ma-p'hik, ka Makou-sasoulat, ka</FORM>
  </S>
  <S id="S13">
    <FORM>paka-patei-auh, ka pa-pætti-mau-</FORM>
  </S>
  <S id="S14">
    <FORM>aeil-appa tou katatouro ki wæ'i.</FORM>
  </S>
  <S id="S15">
    <FORM>22 Trou ka ni-pa-toulam tyni-</FORM>
  </S>
  <S id="S16">
    <FORM>æn ta ti Petrus, ni-kmæ-i-nauna-</FORM>
  </S>
  <S id="S17">
    <FORM>mou matymha tyni-æn, koun, Mei-</FORM>
  </S>
  <S id="S18">
    <FORM>rang maharum-mâ ymhou-an, assi</FORM>
  </S>
  <S id="S19">
    <FORM>pavut-anh ta atta ymhou-an.</FORM>
  </S>
  <S id="S20">
    <FORM>23 Râ teni rou ni-ma'æu-</FORM>
  </S>
  <S id="S21">
    <FORM>douma tyni-æn, ni-k'ma ti Petrus</FORM>
  </S>
  <S id="S22">
    <FORM>an, 'arang-â Tama-makou-dou-</FORM>
  </S>
  <S id="S23">
    <FORM>ma mourikour jæu-an, ka pa-ræu</FORM>
  </S>
  <S id="S24">
    <FORM>ræu kow jau-an: ka assi kow pæh-</FORM>
  </S>
  <S id="S25">
    <FORM>arpit pæh-dimdim ka à tou Alid:</FORM>
  </S>
  <S id="S26">
    <FORM>dyk ka à tou ka'æuloung-da,</FORM>
  </S>
  <S id="S27">
    <FORM>24 Tou kidi k'anna ni-k'ma ta</FORM>
  </S>
  <S id="S28">
    <FORM>ti Jesus ki Pahtatæutau-han tyn,</FORM>
  </S>
  <S id="S29">
    <FORM>Timamang ta mamoei mææuugh</FORM>
  </S>
  <S id="S30">
    <FORM>mouqua jau-an-nda, rmau-à mad-</FORM>
  </S>
  <S id="S31">
    <FORM>dotyni-æn, mara-a ka navæværægh</FORM>
  </S>
  <S id="S32">
    <FORM>tyn, ka smala-dylloum-à jau-an.</FORM>
  </S>
  <S id="S33">
    <FORM>25 Ka timamang ta mamoei</FORM>
  </S>
  <S id="S34">
    <FORM>'hma ki kæuag-han tyn, ataurum-</FORM>
  </S>
  <S id="S35">
    <FORM>ma-æh ki anna: rå ti mamang ta</FORM>
  </S>
</TEXT>