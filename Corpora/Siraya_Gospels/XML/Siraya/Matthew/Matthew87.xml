<TEXT id="Siraya_Matthew87" xml:lang="fos" source="Siraya Bible, Matthew gospel" copyright="public domain" citation="" BibTeX_citation="">
  <S id="S1">
    <FORM>Ka sasat kytti-æn'æb' ki pat ki lbæh</FORM>
  </S>
  <S id="S2">
    <FORM>ki soulat.</FORM>
  </S>
  <S id="S3">
    <FORM>1 Tou kidi k'anna ni-milling-</FORM>
  </S>
  <S id="S4">
    <FORM>igh ta ti Herodes ka sat ki</FORM>
  </S>
  <S id="S5">
    <FORM>vouel ki pahpat ki Meisasou ki</FORM>
  </S>
  <S id="S6">
    <FORM>pourough ki kakalauakau ti Jesus.</FORM>
  </S>
  <S id="S7">
    <FORM>2 Ka ni-k'ma ki rarauwei tyn,</FORM>
  </S>
  <S id="S8">
    <FORM>Ti Joannes ka na Tama-æulough</FORM>
  </S>
  <S id="S9">
    <FORM>ta ti atta, Ni-pa-æhpyt-en ta teni</FORM>
  </S>
  <S id="S10">
    <FORM>ki ni-kapat-ei-an, ka alei ki atta</FORM>
  </S>
  <S id="S11">
    <FORM>peiraring-ei-en tyni-æn ta ka ilhg-en</FORM>
  </S>
  <S id="S12">
    <FORM>ka ringei.</FORM>
  </S>
  <S id="S13">
    <FORM>3 Ka ni-pa-tau ta ti Herodes</FORM>
  </S>
  <S id="S14">
    <FORM>ti Joannes-an, ni-pavæuut pa-pou-</FORM>
  </S>
  <S id="S15">
    <FORM>sang-at tyni-æn alei ti Herodias-</FORM>
  </S>
  <S id="S16">
    <FORM>an ka kei-en ki tæ'i-appara tyn</FORM>
  </S>
  <S id="S17">
    <FORM>ka ti Filippus.</FORM>
  </S>
  <S id="S19">
    <FORM>4 Ka ni-k'ma ta ti Joannes</FORM>
  </S>
  <S id="S20">
    <FORM>tyni-æn, Assi kow hahei-en mei'a</FORM>
  </S>
  <S id="S21">
    <FORM>tyni-æn.</FORM>
  </S>
  <S id="S22">
    <FORM>5 Ka rou ni-kamoei-in tyn</FORM>
  </S>
  <S id="S23">
    <FORM>paka-patei tyni-æn ni-mahtakout</FORM>
  </S>
  <S id="S24">
    <FORM>ki ta'u, alei ka Tama-mattæi-tan</FORM>
  </S>
  <S id="S25">
    <FORM>ta teni ni-k'ma ta rÿh nein.</FORM>
  </S>
  <S id="S26">
    <FORM>6 ka tou wæ'i ki ou-vava-</FORM>
  </S>
  <S id="S27">
    <FORM>toug-an ki ni-pei-alak ta ti Hero-</FORM>
  </S>
  <S id="S28">
    <FORM>des, ni-rmang-toungtoul ta tatimi-</FORM>
  </S>
  <S id="S29">
    <FORM>in ti Herodias tou toukad [neini-</FORM>
  </S>
  <S id="S30">
    <FORM>æn] ka ni-ky-heil-an ti Horodes.</FORM>
  </S>
  <S id="S32">
    <FORM>7 Ka ni-patou-msing faulkut</FORM>
  </S>
  <S id="S33">
    <FORM>tyni-æn pi'ǣ ki mamang ki toumi-</FORM>
  </S>
  <S id="S34">
    <FORM>mi-'auh tyn.</FORM>
  </S>
</TEXT>