<TEXT id="Siraya_Matthew182" xml:lang="fos" source="Siraya Bible, Matthew gospel" copyright="public domain" citation="" BibTeX_citation="">
  <S id="S1">
    <FORM>62 Râ tou sasat-appa kiwa'i,</FORM>
  </S>
  <S id="S2">
    <FORM>ka siäugh ki sitatanang-en, ni</FORM>
  </S>
  <S id="S3">
    <FORM>mæuisal ta Sibavau ka Tama-</FORM>
  </S>
  <S id="S4">
    <FORM>Phik ki Fariseen-appa ti Pilatus-</FORM>
  </S>
  <S id="S5">
    <FORM>an,</FORM>
  </S>
  <S id="S6">
    <FORM>sou ta</FORM>
  </S>
  <S id="S7">
    <FORM>63 Kma, Meirang, hibalei</FORM>
  </S>
  <S id="S8">
    <FORM>'nian ka ni-mattæ'i-k'ma hynna ki</FORM>
  </S>
  <S id="S9">
    <FORM>Tama-patau-rahei ki anna</FORM>
  </S>
  <S id="S10">
    <FORM>ka mauagh-appa ta teni, æhpit-</FORM>
  </S>
  <S id="S11">
    <FORM>aumau siäugh ki toutouro ki wæ'i.</FORM>
  </S>
  <S id="S12">
    <FORM>64 Padingi-au hnyn papææu</FORM>
  </S>
  <S id="S13">
    <FORM>saoun kmading ta ravak tou kidi</FORM>
  </S>
  <S id="S14">
    <FORM>ki katatouro ki wæ'i, alei ka assi</FORM>
  </S>
  <S id="S15">
    <FORM>lava ierrou-'æh ta Pahtatæutaung-</FORM>
  </S>
  <S id="S16">
    <FORM>han tyn dou euvanan haouzoung</FORM>
  </S>
  <S id="S17">
    <FORM>tyni-æn, ka mattæ'i-k'ma-ah-hyn-</FORM>
  </S>
  <S id="S18">
    <FORM>na ki ta'u, Nipatimææ-æn [pa</FORM>
  </S>
  <S id="S19">
    <FORM>æhpit] ki ni-kapateian: ka kom</FORM>
  </S>
  <S id="S20">
    <FORM>ma-hynna masaoun-al-ato mate ta</FORM>
  </S>
  <S id="S21">
    <FORM>taurahei-en ka siæugh ki ni-sion</FORM>
  </S>
  <S id="S22">
    <FORM>ro-ato.</FORM>
  </S>
  <S id="S23">
    <FORM>65 Râ ni-k'ma neini-en ta ti</FORM>
  </S>
  <S id="S24">
    <FORM>Pilatus, Akou-mea-kamou ki kma</FORM>
  </S>
  <S id="S25">
    <FORM>kading, ou-koua-au, papau-saoun-</FORM>
  </S>
  <S id="S26">
    <FORM>auto ki anna mama ki kava-næ-</FORM>
  </S>
  <S id="S27">
    <FORM>noumi.</FORM>
  </S>
  <S id="S28">
    <FORM>66 Jrou ka d'marang ta neni,</FORM>
  </S>
  <S id="S29">
    <FORM>ni-papæu-saoun-nen nein ki kma</FORM>
  </S>
  <S id="S30">
    <FORM>kading ta ravak, rou ni-pou-ka-</FORM>
  </S>
  <S id="S31">
    <FORM>ha'n nein pou-tapoei-ou pou-kidi</FORM>
  </S>
  <S id="S32">
    <FORM>ta vahto.</FORM>
  </S>
</TEXT>