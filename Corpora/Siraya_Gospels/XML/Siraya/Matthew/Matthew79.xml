<TEXT id="Siraya_Matthew79" xml:lang="fos" source="Siraya Bible, Matthew gospel" copyright="public domain" citation="" BibTeX_citation="">
  <S id="S1">
    <FORM>ta teni ki kahouvaran: râ tima-</FORM>
  </S>
  <S id="S2">
    <FORM>mang ta aulouh, 'ææumi-'eil-appa</FORM>
  </S>
  <S id="S3">
    <FORM>tyni-æn ta akoumean tyn.</FORM>
  </S>
  <S id="S5">
    <FORM>13 Alei ki atta pasousou-en-au</FORM>
  </S>
  <S id="S6">
    <FORM>neini-æn ki pæ-myh-kaulaul'-an ki</FORM>
  </S>
  <S id="S7">
    <FORM>sou, alei ka tou kakytt'an nein</FORM>
  </S>
  <S id="S8">
    <FORM>assi kmytta-ah, ka tou 'æilling-hen</FORM>
  </S>
  <S id="S9">
    <FORM>nein assi millingigh-ah, ka assi mou-</FORM>
  </S>
  <S id="S10">
    <FORM>mha-ah ta neni.</FORM>
  </S>
  <S id="S11">
    <FORM>14 Ka pavæuttin neini-æn ta</FORM>
  </S>
  <S id="S12">
    <FORM>ni-pattæi-tan ti Esajas ka k'ma,</FORM>
  </S>
  <S id="S13">
    <FORM>Illingh-ei-moumi ki 'æilling-hen,</FORM>
  </S>
  <S id="S14">
    <FORM>rå assi-kamou mou-mha-ah: ka ka-</FORM>
  </S>
  <S id="S15">
    <FORM>kytta-ei-moumi ki kakytt'-an, ka</FORM>
  </S>
  <S id="S16">
    <FORM>assi-kamou kmytta-ah poulilyt.</FORM>
  </S>
  <S id="S18">
    <FORM>15 Ka kæuh-kunnum-ato ta</FORM>
  </S>
  <S id="S19">
    <FORM>tintin ki ta-'u k'atta, ka ni-ma-</FORM>
  </S>
  <S id="S20">
    <FORM>houhspit millingigh ta tangira</FORM>
  </S>
  <S id="S21">
    <FORM>nein: ka ni-ittub ta matta nein ki</FORM>
  </S>
  <S id="S22">
    <FORM>assi nein kytta-eih dou roumang</FORM>
  </S>
  <S id="S23">
    <FORM>ki matta, ki assi nein illing-eih ki</FORM>
  </S>
  <S id="S24">
    <FORM>tangira, ki assi nein omheih ki tin-</FORM>
  </S>
  <S id="S25">
    <FORM>tin, ki assi nein si-lala-eih, ki paka-</FORM>
  </S>
  <S id="S26">
    <FORM>darikah-aumau neini-æn.</FORM>
  </S>
  <S id="S28">
    <FORM>16 Râ akou-riang ta matta-</FORM>
  </S>
  <S id="S29">
    <FORM>oumi, alei ka kmyttâ-ato, ki tang-</FORM>
  </S>
  <S id="S30">
    <FORM>ira-appa-moumi, alei ka milling-</FORM>
  </S>
  <S id="S31">
    <FORM>ig-atou-râ.</FORM>
  </S>
  <S id="S32">
    <FORM>17 Ka d'lligh koun-nau-ka-</FORM>
  </S>
  <S id="S33">
    <FORM>mou-râ, Ka mabatoung ki na Ta-</FORM>
  </S>
  <S id="S34">
    <FORM>ma-mattæi-tan ki na matiktik-</FORM>
  </S>
  <S id="S35">
    <FORM>appa ta ni-mamoei kmytta ka</FORM>
  </S>
</TEXT>