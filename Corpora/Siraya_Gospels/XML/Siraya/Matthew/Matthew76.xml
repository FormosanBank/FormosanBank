<TEXT id="Siraya_Matthew76" xml:lang="fos" source="Siraya Bible, Matthew gospel" copyright="public domain" citation="" BibTeX_citation="">
  <S id="S1">
    <FORM>Salomon-an, attaoun hia.</FORM>
  </S>
  <S id="S2">
    <FORM>43 Ka rou d'marang-al-ato</FORM>
  </S>
  <S id="S3">
    <FORM>makka-rbo ki kæuloung ta Joep-</FORM>
  </S>
  <S id="S4">
    <FORM>an ka assi matikanagh, damiaka</FORM>
  </S>
  <S id="S5">
    <FORM>sahka-quan tyn mou-naunang tou</FORM>
  </S>
  <S id="S6">
    <FORM>itouquan ka markæh kma-ki-ym</FORM>
  </S>
  <S id="S7">
    <FORM>ki pæ'i-habab'-eih tyn, râ assi tyn</FORM>
  </S>
  <S id="S8">
    <FORM>paki-valei-in.</FORM>
  </S>
  <S id="S9">
    <FORM>44 Anna ta pa-sousou-en tyn,</FORM>
  </S>
  <S id="S10">
    <FORM>Sa-likough-ah-koh mou-qua tou</FORM>
  </S>
  <S id="S11">
    <FORM>tallagh-au, ka ni-darang-en-au: ka</FORM>
  </S>
  <S id="S12">
    <FORM>rou iroua, paki-valei-en tyn ka</FORM>
  </S>
  <S id="S13">
    <FORM>kouhko ka ni-ouwap-pan ki ou-</FORM>
  </S>
  <S id="S14">
    <FORM>wap tmoura paka-tabung ta anna.</FORM>
  </S>
  <S id="S15">
    <FORM>45 Anna ta 'ou-koun tyn mara</FORM>
  </S>
  <S id="S16">
    <FORM>pa-toulam tyni-æn pipito ki Joep-</FORM>
  </S>
  <S id="S17">
    <FORM>an ka pani ka masaoun matt-'e ty-</FORM>
  </S>
  <S id="S18">
    <FORM>ni-æn mamado, ka rou ni-sararbo</FORM>
  </S>
  <S id="S19">
    <FORM>itouqua ta neni hynna, ka æ'æuh ki</FORM>
  </S>
  <S id="S20">
    <FORM>kaæuloung k'anna paka-saoun-en</FORM>
  </S>
  <S id="S21">
    <FORM>pakatt'e ki na ouro tyn. K'ma-al-</FORM>
  </S>
  <S id="S22">
    <FORM>appa hynna ki kavouyl-an k'atta</FORM>
  </S>
  <S id="S23">
    <FORM>ka matt-'e.</FORM>
  </S>
  <S id="S24">
    <FORM>46 Ka rou pasousou-en-appa</FORM>
  </S>
  <S id="S25">
    <FORM>tyn ki makoi-lalaulau, kytt-'ei ta ti</FORM>
  </S>
  <S id="S26">
    <FORM>rena ki tæ'i-apapa-r-appa tyn ta ni-</FORM>
  </S>
  <S id="S27">
    <FORM>mitoukko itou-mala, kmi-ym ki</FORM>
  </S>
  <S id="S28">
    <FORM>pasousou-ei nein tyni-æn.</FORM>
  </S>
  <S id="S29">
    <FORM>47 Ka ni-k'ma ta ti ano tyni-</FORM>
  </S>
  <S id="S30">
    <FORM>æn, Kytt'ei, itou-ma-'la hynna mi-</FORM>
  </S>
  <S id="S31">
    <FORM>toukko ta ti rena ki tæ'i-appa-</FORM>
  </S>
  <S id="S32">
    <FORM>rapp-amhou, kmi-ym kipasousou-</FORM>
  </S>
  <S id="S33">
    <FORM>ei nein ym-hou-an,</FORM>
  </S>
  <S id="S34">
    <FORM>48 Râ ni-mattæi-vli ta teni</FORM>
  </S>
  <S id="S35">
    <FORM>k'ma tyni-æn ka bana [ki atta],</FORM>
  </S>
</TEXT>