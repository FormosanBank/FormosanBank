<TEXT id="Siraya_Matthew80" xml:lang="fos" source="Siraya Bible, Matthew gospel" copyright="public domain" citation="" BibTeX_citation="">
  <S id="S1">
    <FORM>kytta-'n oumi, râ assi nein ni-</FORM>
  </S>
  <S id="S2">
    <FORM>k'yttan: millingigh-appa ka illing-</FORM>
  </S>
  <S id="S3">
    <FORM>ign-oumi, râ assi nein ni-illing-</FORM>
  </S>
  <S id="S4">
    <FORM>hen.</FORM>
  </S>
  <S id="S5">
    <FORM>18 Anna ta milling-ighâ ta</FORM>
  </S>
  <S id="S6">
    <FORM>ymoumi ki pa-myh-kaulaul-'an ki</FORM>
  </S>
  <S id="S7">
    <FORM>Tama-diri.</FORM>
  </S>
  <S id="S8">
    <FORM>19 Irou millingigh ta tima-</FORM>
  </S>
  <S id="S9">
    <FORM>mang ki sou ki Pei-sasou-an tou</FORM>
  </S>
  <S id="S10">
    <FORM>assi tyn oumha'n, dou-miaka jroua</FORM>
  </S>
  <S id="S11">
    <FORM>ta ti Tatapin [ka Lyttou] ka smi-</FORM>
  </S>
  <S id="S12">
    <FORM>mourang mara ki ni-diri tou tintin</FORM>
  </S>
  <S id="S13">
    <FORM>tyn. Teni ta ti Ano, ka ni-diri tou</FORM>
  </S>
  <S id="S14">
    <FORM>vidæh ki darang.</FORM>
  </S>
  <S id="S15">
    <FORM>20 Teni ka ni-diri tou vah-</FORM>
  </S>
  <S id="S16">
    <FORM>tohtoh-an ka mahourat ki næi,</FORM>
  </S>
  <S id="S17">
    <FORM>teni ta ti anna ka millingigh ki</FORM>
  </S>
  <S id="S18">
    <FORM>sou, ka matta-dys matta-rei ki anna</FORM>
  </S>
  <S id="S19">
    <FORM>matta-rÿh.</FORM>
  </S>
  <S id="S20">
    <FORM>21 Râ aousi ki patar tou ma-</FORM>
  </S>
  <S id="S21">
    <FORM>mado tyni-æn, ka tnadys tna-kaha</FORM>
  </S>
  <S id="S22">
    <FORM>ta teni: ka rou iroua ta sam'k-an</FORM>
  </S>
  <S id="S23">
    <FORM>ki kou-dylloug-han lava alei ki</FORM>
  </S>
  <S id="S24">
    <FORM>sou, madys paka-varau-en-ato.</FORM>
  </S>
  <S id="S26">
    <FORM>22 Teni-râ ka ni-diri tou ad-</FORM>
  </S>
  <S id="S27">
    <FORM>addim-an, teni ta ti atta ka mil-</FORM>
  </S>
  <S id="S28">
    <FORM>lingigh ki sou, râ pæh-kbo-en</FORM>
  </S>
  <S id="S29">
    <FORM>pæh-dimdim ki yddarinoug-han</FORM>
  </S>
  <S id="S30">
    <FORM>k'atta ki si-mham-hân-appa ki</FORM>
  </S>
  <S id="S31">
    <FORM>vang-ei ta kmaralib ki sou, ka</FORM>
  </S>
  <S id="S32">
    <FORM>makka-p'euppæh ta-anna.</FORM>
  </S>
  <S id="S33">
    <FORM>23 Teni ka ni-diri tou næi ka</FORM>
  </S>
  <S id="S34">
    <FORM>mariang, teni ta ti atta ka dou</FORM>
  </S>
  <S id="S35">
    <FORM>millingigh ki sou ka moumha ki</FORM>
  </S>
</TEXT>