<TEXT id="Siraya_Matthew105" xml:lang="fos" source="Siraya Bible, Matthew gospel" copyright="public domain" citation="" BibTeX_citation="">
  <S id="S1">
    <FORM>aring tou opoei, vounavounei-</FORM>
  </S>
  <S id="S2">
    <FORM>appa tou raloum.</FORM>
  </S>
  <S id="S3">
    <FORM>16 Ka ni-ad-au ta teni pæ-ou-</FORM>
  </S>
  <S id="S4">
    <FORM>qua tou Pahtatautæu-en-hou, ka</FORM>
  </S>
  <S id="S5">
    <FORM>assi nein pa-lpoughin tyni-æn pa-</FORM>
  </S>
  <S id="S6">
    <FORM>darikagh.</FORM>
  </S>
  <S id="S7">
    <FORM>17 Ka rou mattæ'i-v'lli ta ti</FORM>
  </S>
  <S id="S8">
    <FORM>Jesus, ni-koun tyn, A-lei-ah ki</FORM>
  </S>
  <S id="S9">
    <FORM>kavavouyl-an ka assi tna-msing ka</FORM>
  </S>
  <S id="S10">
    <FORM>maparit, makka mang-ah koh ki</FORM>
  </S>
  <S id="S11">
    <FORM>dallia ka toulam-ah-koh ymoumi-</FORM>
  </S>
  <S id="S12">
    <FORM>an? Makka mang-ah ki dallia ka</FORM>
  </S>
  <S id="S13">
    <FORM>tub'h-ei-mau-kamou? ad-auto hia</FORM>
  </S>
  <S id="S14">
    <FORM>ta teni paou-qua jau-an.</FORM>
  </S>
  <S id="S15">
    <FORM>18 Ka ni-matymha tyni-æn ta</FORM>
  </S>
  <S id="S16">
    <FORM>ti Jesus, ka ni-d'marang ta Lyttou</FORM>
  </S>
  <S id="S17">
    <FORM>tyni-æn, ka pædærikæh-ato ta</FORM>
  </S>
  <S id="S18">
    <FORM>rauwei tou patou-kidi-en k'anna</FORM>
  </S>
  <S id="S19">
    <FORM>ki tæ lei-râ.</FORM>
  </S>
  <S id="S20">
    <FORM>19 Tou kidi k'anna rou ni-</FORM>
  </S>
  <S id="S21">
    <FORM>hmani iroua ti Jesus-an ta Pahta-</FORM>
  </S>
  <S id="S22">
    <FORM>tæutæuhan, ka ni-koun nein, Kæu-</FORM>
  </S>
  <S id="S23">
    <FORM>mang ka assi-kame ti ymi-an ni-</FORM>
  </S>
  <S id="S24">
    <FORM>simaki-lpough simaki-papænæh ty.</FORM>
  </S>
  <S id="S25">
    <FORM>ni-æn?</FORM>
  </S>
  <S id="S26">
    <FORM>20 Ni-k'ma ta ti Jesus neini</FORM>
  </S>
  <S id="S27">
    <FORM>æn, Alei ki kaurou-an-noumi mna-</FORM>
  </S>
  <S id="S28">
    <FORM>msing: d'lligh koun-nau-kamou-râ,</FORM>
  </S>
  <S id="S29">
    <FORM>irou na hei mamama ki touhto ki</FORM>
  </S>
  <S id="S30">
    <FORM>shai ta tna-msing-an-noumi, ynna-</FORM>
  </S>
  <S id="S31">
    <FORM>kamou bana-vana ki voukkyn</FORM>
  </S>
  <S id="S32">
    <FORM>katta, d'marang-a hia mou-koua</FORM>
  </S>
  <S id="S33">
    <FORM>hynna, ka d'marang-ah mou-koua:</FORM>
  </S>
  <S id="S34">
    <FORM>ka aousi-al-ato kimamang ka assi-</FORM>
  </S>
  <S id="S35">
    <FORM>moumi ynanang-ei mei-pough.</FORM>
  </S>
