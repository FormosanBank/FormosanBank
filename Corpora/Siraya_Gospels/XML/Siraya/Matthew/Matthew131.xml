<TEXT id="Siraya_Matthew131" xml:lang="fos" source="Siraya Bible, Matthew gospel" copyright="public domain" citation="" BibTeX_citation="">
  <S id="S1">
    <FORM>kapatei-eta tyni-æn, tammi-'eta ki-</FORM>
  </S>
  <S id="S2">
    <FORM>tablien-tyn-da.</FORM>
  </S>
  <S id="S3">
    <FORM>39 Irou ka ni-ara nein tmou-</FORM>
  </S>
  <S id="S4">
    <FORM>roung tyni-æn, ni-maryng smaki-</FORM>
  </S>
  <S id="S5">
    <FORM>tauagh ki atto-kakaraumatæ æn</FORM>
  </S>
  <S id="S6">
    <FORM>ka ni-pakapatei tyni-æn.</FORM>
  </S>
  <S id="S7">
    <FORM>40 Irou râ irou-al-ato ta Mei-</FORM>
  </S>
  <S id="S8">
    <FORM>rang ki atto-kakaræumata-'han,</FORM>
  </S>
  <S id="S9">
    <FORM>oumang-ah lava ki Tama-tahkoul</FORM>
  </S>
  <S id="S10">
    <FORM>k'anna?</FORM>
  </S>
  <S id="S11">
    <FORM>41 Ni-k'ma tyni-æn, Paka-</FORM>
  </S>
  <S id="S12">
    <FORM>patei-eih tyn ta assi mariang k'anna</FORM>
  </S>
  <S id="S13">
    <FORM>ki kapatei-an ka mat'e, ka pa-itou</FORM>
  </S>
  <S id="S14">
    <FORM>koua-ah ki atto-kakaræumatæ-'an</FORM>
  </S>
  <S id="S15">
    <FORM>ki pani ki voual ka tmahkoul, ka</FORM>
  </S>
  <S id="S16">
    <FORM>pi-a tyni-æn ki voua tou kidi nein</FORM>
  </S>
  <S id="S17">
    <FORM>ki tauwil.</FORM>
  </S>
  <S id="S18">
    <FORM>42 Ni-k'ma ta ti Jesus neini-</FORM>
  </S>
  <S id="S19">
    <FORM>æn, Myhkakoua kaua assi-moumi</FORM>
  </S>
  <S id="S20">
    <FORM>ni-kuhtung tou na sasoulat, Vahto</FORM>
  </S>
  <S id="S21">
    <FORM>ka ni-aryng ki Tama-mei-ryngei</FORM>
  </S>
  <S id="S22">
    <FORM>ki tallagh, ni-kæuh-vahto tou pou-</FORM>
  </S>
  <S id="S23">
    <FORM>soul: Ni-pamt-in ti JEHOVA ta</FORM>
  </S>
  <S id="S24">
    <FORM>atta, ka 'ouryng-hau-in-ato tou</FORM>
  </S>
  <S id="S25">
    <FORM>.matta-eta.</FORM>
  </S>
  <S id="S27">
    <FORM>43 Alei ki anna pasousou-en-</FORM>
  </S>
  <S id="S28">
    <FORM>au-kamou, ka baoumi-'eih ymou</FORM>
  </S>
  <S id="S29">
    <FORM>mi-æn ta Pei-sasou-an ki Alid, ka</FORM>
  </S>
  <S id="S30">
    <FORM>pa -koua-eih pa'ä-tounnoun ki</FORM>
  </S>
  <S id="S31">
    <FORM>ta'u ka makka-vavoua.</FORM>
  </S>
  <S id="S33">
    <FORM>44 Ka timamang ta mou-aryng</FORM>
  </S>
  <S id="S34">
    <FORM>mou-halap ki vahtou k'anna,</FORM>
  </S>
  <S id="S35">
    <FORM>pauh-tæuitau-eih ta teni: ka ti</FORM>
  </S>
</TEXT>