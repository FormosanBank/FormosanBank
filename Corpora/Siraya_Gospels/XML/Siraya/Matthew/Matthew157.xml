<TEXT id="Siraya_Matthew157" xml:lang="fos" source="Siraya Bible, Matthew gospel" copyright="public domain" citation="" BibTeX_citation="">
  <S id="S1">
    <FORM>27. Anna ta ynna'mhou p'hei</FORM>
  </S>
  <S id="S2">
    <FORM>ta malitouk-au ki Tama-viri, ka</FORM>
  </S>
  <S id="S3">
    <FORM>dou irouato-koh, ni-alikough-au</FORM>
  </S>
  <S id="S4">
    <FORM>ta à jau lam ki than.</FORM>
  </S>
  <S id="S6">
    <FORM>28 Anna ta hami-au ta talent</FORM>
  </S>
  <S id="S7">
    <FORM>k'anna, ka pha-an-eito tyni-æn</FORM>
  </S>
  <S id="S8">
    <FORM>ka akoumea ki sât kyttian ki ta-</FORM>
  </S>
  <S id="S9">
    <FORM>lenten.</FORM>
  </S>
  <S id="S10">
    <FORM>29 Ka veiagh ka akoumea,</FORM>
  </S>
  <S id="S11">
    <FORM>teni ta p'heih, ka poudimm'eil</FORM>
  </S>
  <S id="S12">
    <FORM>appa: râ teni ka aou-si, ara-eil</FORM>
  </S>
  <S id="S13">
    <FORM>appa ta akoumea tyni-æn.</FORM>
  </S>
  <S id="S17">
    <FORM>30 Ka aryng-an-ei ta kouncia</FORM>
  </S>
  <S id="S18">
    <FORM>k'anna ka saramsam smaki-tæuagh</FORM>
  </S>
  <S id="S19">
    <FORM>tyni-æn tou siouro itou-tæuagh ka</FORM>
  </S>
  <S id="S20">
    <FORM>karimdim-man, tou hynna-al-ato</FORM>
  </S>
  <S id="S21">
    <FORM>ta tangi-tangi-an ki pæ-it-ing-en-</FORM>
  </S>
  <S id="S22">
    <FORM>appa ki waligh.</FORM>
  </S>
  <S id="S23">
    <FORM>31 Ka rou irou-'al-ato ta Alak</FORM>
  </S>
  <S id="S24">
    <FORM>ki ka'æuloung tou keirang-en k-</FORM>
  </S>
  <S id="S25">
    <FORM>kidi tyn, md-appa ki Tama-Gnau</FORM>
  </S>
  <S id="S26">
    <FORM>ka dlligh matiktik tou-lam tyni-</FORM>
  </S>
  <S id="S27">
    <FORM>æn, anna ta ierrong-eih tyn tou</FORM>
  </S>
  <S id="S28">
    <FORM>iirrarong-an ki keirang-en ki kidi</FORM>
  </S>
  <S id="S29">
    <FORM>tyn.</FORM>
  </S>
  <S id="S30">
    <FORM>32 Ka pæpa-al-eih tou æmah</FORM>
  </S>
  <S id="S31">
    <FORM>tyni-æn ta ymmid ki ta'utaou, ka</FORM>
  </S>
  <S id="S32">
    <FORM>papah-piah-eih tyn ta neni k'anna</FORM>
  </S>
  <S id="S33">
    <FORM>mæi tou-tavætævæh mama ki sou-</FORM>
  </S>
  <S id="S34">
    <FORM>ajam ka papahpiæh ki jouko ki</FORM>
  </S>
  <S id="S35">
    <FORM>jou.</FORM>
  </S>
</TEXT>