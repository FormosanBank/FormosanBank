<TEXT id="Siraya_Matthew127" xml:lang="fos" source="Siraya Bible, Matthew gospel" copyright="public domain" citation="" BibTeX_citation="">
  <S id="S1">
    <FORM>moukoua tou Bethania, ka ni-mi-</FORM>
  </S>
  <S id="S2">
    <FORM>oulei-hynna-rà.</FORM>
  </S>
  <S id="S3">
    <FORM>18 Ka madama-appa dou sa</FORM>
  </S>
  <S id="S4">
    <FORM>likogh mau-'uma, ni-mahgangei</FORM>
  </S>
  <S id="S5">
    <FORM>ta teni.</FORM>
  </S>
  <S id="S6">
    <FORM>19 Nda irou ka k'ytt'an tyn ta</FORM>
  </S>
  <S id="S7">
    <FORM>sat ka ngara-an ka lakauongin tou</FORM>
  </S>
  <S id="S8">
    <FORM>said ki darang, ni mou-koua ta</FORM>
  </S>
  <S id="S9">
    <FORM>teni hynna, ka assi ni-k'abalei tyn</FORM>
  </S>
  <S id="S10">
    <FORM>tou [ngara] k'anna dyk ka hapa.</FORM>
  </S>
  <S id="S11">
    <FORM>Ka ni-k ma ki anna, Myh-ka koua-</FORM>
  </S>
  <S id="S12">
    <FORM>ah kow assi makka-voua tou ydda-</FORM>
  </S>
  <S id="S13">
    <FORM>rynnoug-han. Ka ni-madys milak-</FORM>
  </S>
  <S id="S14">
    <FORM>lak ta lakuoungin.</FORM>
  </S>
  <S id="S15">
    <FORM>20 Irou ka k'ytt'an [ta anna]</FORM>
  </S>
  <S id="S16">
    <FORM>ki Pahtatæutauug-ban ni-mou</FORM>
  </S>
  <S id="S17">
    <FORM>kiap-ato-ra, ka ni-koun nein, Ni-</FORM>
  </S>
  <S id="S18">
    <FORM>smom-ato mamei-mang milaklak</FORM>
  </S>
  <S id="S19">
    <FORM>ta lakæuoungin?</FORM>
  </S>
  <S id="S20">
    <FORM>21 Râ ni-mattæi-v'lli ta ti Je.</FORM>
  </S>
  <S id="S21">
    <FORM>sus k'ma neini-æn, Missing koun</FORM>
  </S>
  <S id="S22">
    <FORM>nau-kamou-râ, Irou akou-mea-</FORM>
  </S>
  <S id="S23">
    <FORM>kamou ki tnamsing-an da tou assi</FORM>
  </S>
  <S id="S24">
    <FORM>pæg-dælag-in ki ryh, ynna-ka-</FORM>
  </S>
  <S id="S25">
    <FORM>mou assi dyk pâm't-ah ka ni-paa-</FORM>
  </S>
  <S id="S26">
    <FORM>mut ki lakauoung-in, nda heirou</FORM>
  </S>
  <S id="S27">
    <FORM>pa-sousou-ei-moumi ki voukkyn</FORM>
  </S>
  <S id="S28">
    <FORM>katta, Pllei-auh ka aryng-an-ei</FORM>
  </S>
  <S id="S29">
    <FORM>tou vaoung, paamt-aul-ato k'an-</FORM>
  </S>
  <S id="S30">
    <FORM>na.</FORM>
  </S>
  <S id="S31">
    <FORM>22 Nda ymmid ki mamang</FORM>
  </S>
  <S id="S32">
    <FORM>ka toumimiau-moumi tou pako</FORM>
  </S>
  <S id="S33">
    <FORM>Alilid-en, rou tna-msing-kamou,</FORM>
  </S>
  <S id="S34">
    <FORM>ara-au-mouni ta anna.</FORM>
  </S>
  <S id="S35">
    <FORM>23 Nda dou ou-kouva-en tyn</FORM>
  </S>
</TEXT>