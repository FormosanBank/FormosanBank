<TEXT id="Siraya_Matthew82" xml:lang="fos" source="Siraya Bible, Matthew gospel" copyright="public domain" citation="" BibTeX_citation="">
  <S id="S1">
    <FORM>mou lava pi-apara pouh-toul ki</FORM>
  </S>
  <S id="S2">
    <FORM>sivægh.</FORM>
  </S>
  <S id="S3">
    <FORM>30 Pa-kæuh-sâl-au patoul tou</FORM>
  </S>
  <S id="S4">
    <FORM>kaäjam-eih, ka tou kidi ki kaä-</FORM>
  </S>
  <S id="S5">
    <FORM>jam-en pasousou-ei-mau ki ta-'u</FORM>
  </S>
  <S id="S6">
    <FORM>ka majam-ah, Siourou-â illud ki</FORM>
  </S>
  <S id="S7">
    <FORM>ourou ka assi mariang, ka ibbun-</FORM>
  </S>
  <S id="S8">
    <FORM>au ta anna tou ibbun, alei ka pa-</FORM>
  </S>
  <S id="S9">
    <FORM>pilæmæ-'æuh, rà ill'ddau ta sivæh</FORM>
  </S>
  <S id="S10">
    <FORM>tou kouvau-au.</FORM>
  </S>
  <S id="S12">
    <FORM>31 Pani-appa ki pæ-myh-kau-</FORM>
  </S>
  <S id="S13">
    <FORM>laul'an ka ni-pou-pænæh-en tyn</FORM>
  </S>
  <S id="S14">
    <FORM>neini-æn, koun, Mama ki touhto</FORM>
  </S>
  <S id="S15">
    <FORM>ki s'hai [ka keiloä] ta Pei-sasou-</FORM>
  </S>
  <S id="S16">
    <FORM>an ki tounnoun ki vullu-vullum,</FORM>
  </S>
  <S id="S17">
    <FORM>ka ni-ara ki ta-'u, ka na dadiri tyn</FORM>
  </S>
  <S id="S18">
    <FORM>tou ouma tyn.</FORM>
  </S>
  <S id="S19">
    <FORM>32 Ka siouro outi-kylling [ta</FORM>
  </S>
  <S id="S20">
    <FORM>anna] ki ymmid ki touhto: jrou-</FORM>
  </S>
  <S id="S21">
    <FORM>râ ni-kæuh-'mha-ato, siouro-ato</FORM>
  </S>
  <S id="S22">
    <FORM>irang ki ymmid ki ourouourou:</FORM>
  </S>
  <S id="S23">
    <FORM>ka kæuh-pærænnæh-ato, k'ma-</FORM>
  </S>
  <S id="S24">
    <FORM>appa-hynna ka jroua ta ajajam ka</FORM>
  </S>
  <S id="S25">
    <FORM>soubuh si-laulau tou pehil tyn-da.</FORM>
  </S>
  <S id="S27">
    <FORM>33 Ka ni-pasousou-en tyn ki</FORM>
  </S>
  <S id="S28">
    <FORM>pæmyh-kaulaul-'an ka pani, Ma-</FORM>
  </S>
  <S id="S29">
    <FORM>ma ta Pei-sasou-an ki tounnoun</FORM>
  </S>
  <S id="S30">
    <FORM>ki vullu-vullum ki ni-pei-apyngit,</FORM>
  </S>
  <S id="S31">
    <FORM>ka ni-ara ki jna ka ni-hma tou</FORM>
  </S>
  <S id="S32">
    <FORM>toutouro ki sau-rarpung-an ki</FORM>
  </S>
  <S id="S33">
    <FORM>moé, tou kidi-appa k'anna ka ma-</FORM>
  </S>
  <S id="S34">
    <FORM>ymd-ato mapyngit.</FORM>
  </S>
  <S id="S35">
    <FORM>34 kamamang k'atta ni-ma-</FORM>
  </S>
</TEXT>